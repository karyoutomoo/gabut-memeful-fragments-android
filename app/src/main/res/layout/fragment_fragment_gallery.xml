<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentGallery"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/tvGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GALERI"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="183dp"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvGallery"
        android:src="@drawable/gatotkaca" />
    <ImageView
        android:id="@+id/pic2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/plana"
        android:layout_below="@+id/tvGallery"
        android:layout_toRightOf="@+id/pic1"/>

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_below="@+id/pic1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/koceng" />
</RelativeLayout>